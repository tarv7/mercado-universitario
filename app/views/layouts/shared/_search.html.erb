<%= simple_form_for :search, url: url, method: :get do |f| %>
  <div class="row field-search">
    <div class="col-md-auto" id="label">
      <%= label %>
    </div>
    <div class="col-md-auto" id="field">
      <%= f.input :word, label: false %>
      <%= f.button :submit, I18n.t('others.actions.search'), class: 'btn-purple' %>
    </div>
  </div>
<% end %>
