<div class="row">
    <div class="col-5 col-image">
      <% if @user.image.attached? %>
        <%= image_tag @user.image.variant(combine_options: { resize: '512x512^', extent: '512x512', gravity: 'Center' }) %>
      <% else %>
        <%= image_tag 'avatar1.png' %>
      <% end %>
    </div>

    <div class="col-7">
      <div class="col title-user"><h2><%= @user.name %></h2></div>
      <div class="row">
        <div class="col info-user">
            <p><%= "#{I18n.t('model.name.university')}: #{@user.college.university.abbreviation}" %></p>
            <p><%= "#{I18n.t('model.name.course')}: #{@user.course.name}" %></p>
            <% if @user.addresses.count.positive? %>
              <p><%= "#{I18n.t('model.name.addresses')}:" %></p>
              <ul>
                <% @user.addresses.each do |address| %>
                  <li><%= address.to_string %></li>
                <% end %>
              </ul>
            <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-auto">
          <%= link_to image_tag('whatsapp.svg', class: 'icon-social'), url_whatsapp_path(@user), target: '_blank' %>
        </div>
      </div>
    </div>
  </div>
