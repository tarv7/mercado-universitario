<%= render 'layouts/shared/search', label: 'Produtos', url: relative_products_url %>

<%= link_to 'Cadastrar novo produto', new_product_path if restricted_area? %>

<div class="row">
  <% @products.each do |p| %>
    <div class="col-3">
      <%= render 'layouts/shared/card', item: p, label: "#{number_to_currency(p.price, locale: :'pt-BR')} - #{p.name}", url_path: product_path(p) %>
    </div>
  <% end %>
</div>

<%= paginate @products %>
