<%= render 'layouts/shared/search', label: 'Categoria' %>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-3">
      <%= render 'layouts/shared/card', label: category.name, url_path: category_products_path(category) %>
    </div>
  <% end %>
</div>

<%= paginate @categories %>
