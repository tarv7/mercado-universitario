<%- if controller_name != 'sessions' %>
  <%= link_to I18n.t('devise.link.signin'), new_session_path(resource_name) %><br>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to I18n.t('devise.link.forget_password'), new_password_path(resource_name) %><br>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to I18n.t('devise.link.signup'), new_registration_path(resource_name) %><br>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' && false %>
  <%= link_to I18n.t('devise.link.not_receive_conf'), new_user_confirmation_path(resource_name) %><br>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to I18n.t('devise.link.not_receive_unlock'), new_unlock_path(resource_name) %><br>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to I18n.t('devise.link.sign_in_with_oauth', OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider) %><br>
  <% end %>
<% end %>
