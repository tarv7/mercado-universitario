<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.input :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.association :course, autocomplete: "course" %>
  </div>

  <div class="field">
    <%= f.input :semester, autocomplete: "semester" %>
  </div>

  <div class="field">
    <%= f.input :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.input :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.fields_for :address, f.object.address || Address.new do |a| %>
    <%= render 'layouts/shared/form_address', a: a %>
  <% end %>

  <div class="actions">
    <%= f.button :submit, 'Sign up' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
